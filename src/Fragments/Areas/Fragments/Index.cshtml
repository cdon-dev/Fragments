@model IReadOnlyCollection<Fragments.Areas.Fragments.Models.FragmentModel>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>All the fragments!</title>
</head>
<style>
    .fragments {
        margin-bottom: 10px;    
    }

    .fragments-iframe {
        display: block;
        width: 100%;
        height: 65vh;
        border: 2px solid #000;
        border-radius: 10px;
        padding: 10px;
    }

    body{
        margin: 0;
        font-family: "Verdana";
    }

    .hide {
        display: none;
    }

    .active{
        background-color: #696969 !important;
        text-decoration: underline;
    }


    .sideBarMain{
        background-color: #708090;
        min-height: 100vh;
        grid-area: sidebar;
    }

    .fragment-list{
        list-style: none;
        padding-left: 0;

    }

    .fragment-list-item{
        padding: 10px;
        border: 1px solid #696969;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        color: #fff;
        text-align: center;
        text-shadow: 1px 1px #454545;
        margin: 5px 10px;
        background-color: cadetblue;
    }

    .header{
        grid-area: header;
        background: linear-gradient(141deg, #2F4F4F 0%, #708090 51%, #2F4F4F 75%);
    }

    .header-title-wrapper{
        display: flex;
        justify-content: center

    }

    .header-title-wrapper h1{
        text-shadow: 1px 1px #696969;
    }

    .mainContent{
        grid-area: maincontent;
        background-color: #f0f0f0;      
    }

    ::-webkit-scrollbar {
    width: 5px;
    }

    ::-webkit-scrollbar-track {
    background: #f1f1f1; 
    }
    
    ::-webkit-scrollbar-thumb {
    background: #888; 
    }

    ::-webkit-scrollbar-thumb:hover {
    background: #555; 
    }

    .grid-container{
    display: grid;
    grid-template-rows: 80px 1fr 1fr;  
    grid-template-columns: 10% 1fr 1fr;
    grid-template-areas:
        'header header header'
        'sidebar maincontent maincontent'
        'sidebar maincontent maincontent';
    }

    @@media only screen and (max-width: 600px) {
    .grid-container{
    grid-template-rows: 1fr;  
    grid-template-columns: 1fr;
    grid-template-areas:
        'header'
        'sidebar'
        'maincontent';
    }

    .sideBarMain{
        min-height: auto;
    }
}
  
</style>
<body>
    <div class="grid-container">
    <div class="header">
        <div class="header-title-wrapper">
            <h1>Fragments catalog</h1>
        </div>
    </div>
    <div class="sideBarMain">
        <div class="sideBarListWrapper">
            <ul class="fragment-list">
            @foreach (var fragment in Model.Where(x => !string.IsNullOrEmpty(x.Html)))
            {
                <li id="@fragment.Id" class="fragment-list-item expandable">@fragment.FragmentGroupName</li>
            }
            </ul>
        </div>        
    </div>

    <div class="mainContent">
        @foreach (var fragment in Model.Where(x => !string.IsNullOrEmpty(x.Html)))
        {
        
        <blockquote id="@($"{fragment.Id}details")" class="fragments hide">
            <!-- <table class="table col-8 mx-auto preformance-table">
                <thead class="thead-dark"> 
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">File Name</th>
                        <th scope="col">Size</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tr>
                    <th scope="row">1</th> 
                    <td>@fragment.Html</td>
                    <td>?</td>
                    <td>?</td>
                </tr>
                <tr> 
                    <th scope="row">2</th>
                    <td>@fragment.Css</td>
                    <td>?</td>
                    <td>?</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>@fragment.Js</td>
                    <td>?</td>  
                    <td>?</td>
                </tr>
            </table> -->
                <iframe id="@($"{fragment.Id}frame")"
                class="fragments-iframe"
                frameborder="0"
                scrolling="yes"
                data-src="@($"{Url.Action("Frame")}?name={fragment.FragmentGroupName}&css=/{fragment.Css}&html=/{fragment.Html}&js=/{fragment.Js}")"></iframe>
        </blockquote>
        }
    </div>

    <script type="text/javascript">

        document.addEventListener("DOMContentLoaded", function () {
            var nodes = document.querySelectorAll('.expandable');

            Array.from(nodes).forEach(x => x.addEventListener('click', onClick));

            function onClick(e) {
                e.preventDefault();
                this.classList.toggle('active')
                var container = document.querySelector('#' + e.currentTarget.id + 'details');
                var frame = document.querySelector('#' + e.currentTarget.id + 'frame');
                if (frame.getAttribute('src') !== null) {
                    container.classList.toggle('hide');
                    return;
                }

                frame.setAttribute('src', frame.dataset.src);

                frame.onload = function () {
                    container.classList.toggle('hide');
                }
            }
        });

    </script>
    </div>
</body>
</html>